<header class="navbar navbar-expand-md navbar-light">
  <div class="container-xl">
    <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbar-menu" aria-expanded="false">
      <span class="navbar-toggler-icon"></span>
    </button>

    <%= link_to root_path, class: "navbar-brand navbar-brand-autodark d-none-navbar-horizontal pr-0 pr-md-3" do %>
      <div class="d-flex align-items-center">
        <%= image_tag "logo.svg", class: "navbar-brand-image" %>
        <div class="ml-2">Link Shortener</div>
      </div>
    <% end %>

    <div class="navbar-nav flex-row order-md-last">
      <div class="nav-item">
        <%= link_to destroy_user_session_path, method: :delete, class: "nav-link" do %>
          <div class="d-none d-xl-block pl-2">
            Logout
          </div>
        <% end %>
      </div>
    </div>

    <div class="navbar-collapse collapse" id="navbar-menu" style="">
      <div class="d-flex flex-column flex-md-row flex-fill align-items-stretch align-items-md-center">
        <ul class="navbar-nav">
          <li class="nav-item <%= current_page?(new_link_path) ? "active" : "" %>">
            <%= link_to new_link_path, class: "nav-link" do %>
              <span class="nav-link-title">
                New Link
              </span>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</header>

<% if notice.present? %>
  <div class="container-xl">
    <div class="alert alert-success alert-dismissible mt-4" role="alert">
      <%= notice %>
      <a href="#" class="close" data-dismiss="alert">&times;</a>
    </div>
  </div>
<% end %>

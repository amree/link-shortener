<%= simple_form_for(link) do |f| %>
  <div class="card-body">
    <div class="mb-3">
      <%= f.input :title %>
    </div>

    <div class="mb-3">
      <%= f.input :url, placeholder: 'https://www.google.com/' %>
    </div>

    <div class="mb-3">
      <%= f.input(
        :slug,
        as: :string,
        label: "Slug",
        wrapper_html: { class: "col-12" },
        input_html: { class: "pl-1" },
        wrapper: :input_group_flat,
        prepend: "#{request.base_url}/")
      %>
    </div>
  </div>

  <div class="card-footer text-right">
    <div class="d-flex">
      <%= f.button :submit, "Submit", class: "btn btn-primary ml-auto" %>
    </div>
  </div>
<% end %>
